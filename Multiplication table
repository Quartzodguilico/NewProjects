cont = n = 0
print('PROGRAMA PARA VER TABUADA')
print('-'*50)
while True:
    n = int(input('Digite um nÃºmero que deseja saber a tabuada: '))
    if n > 0:
        for c in range(1, 11):
            print(f'{n} x {c} = {n * c}')
        print('-' * 50)
    else:
        break
print('-'*50)
print('~Fim do programa~')
